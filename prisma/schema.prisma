generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Guarantee {
  three_months // 3 meses
  six_months // 6 meses
  twelve_months // 12 meses
}

enum Status {
  to_receive // "a receber"
  paid // "pago"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String   @db.VarChar(255)
  email     String   @unique @db.VarChar(255)
  password  String   @db.VarChar(255)
  notes     Note[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Note {
  id            Int       @id @default(autoincrement())
  technicalName String    @db.VarChar(255)
  description   String
  dateOfService DateTime  @default(now())
  guarantee     Guarantee
  price         Decimal?  @db.Decimal(10, 2)
  nameOfClient  String    @db.VarChar(255)
  clientPhone   String?   @db.VarChar(20)
  clientAddress String?   @db.VarChar(100)
  status        Status?
  userId        Int
  user          User      @relation(fields: [userId], references: [id])
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}
